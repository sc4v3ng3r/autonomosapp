<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false">

    <ImageView
        android:id="@+id/MarkInfoProfessionalPicture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/app_icon"
        android:contentDescription="Profile image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/MarkInfoProfessionalName" />

    <TextView
        android:id="@+id/MarkInfoProfessionalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:ellipsize="marquee"
        android:gravity="start"
        android:singleLine="true"
        android:text="@null"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@+id/MarkInfoProfessionalPicture"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/MarkInfoProfessionalRatingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="5.0"
        android:stepSize="0.5"
        android:theme="@style/RatingBarStyle"
        app:layout_constraintStart_toEndOf="@+id/MarkInfoProfessionalPicture"
        app:layout_constraintTop_toBottomOf="@+id/MarkInfoProfessionalName" />

    <TextView
        android:id="@+id/MarkInfoProfessionalPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="AAAAAAAAAAAA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MarkInfoProfessionalPicture"
        app:layout_constraintTop_toBottomOf="@+id/MarkInfoProfessionalRatingBar" />
</android.support.constraint.ConstraintLayout>